<Window x:Class="BookClub.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookClub.UI"
        xmlns:view="clr-namespace:BookClub.UI.Views"
        mc:Ignorable="d" Title="Book Club" WindowState="Maximized" ResizeMode="CanResizeWithGrip"
        Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Readers">
                <view:ReaderView></view:ReaderView>
            </TabItem>
            <TabItem Header="Books">
                <view:BookView></view:BookView>
            </TabItem>
            <TabItem Header="Authors"></TabItem>
        </TabControl>
    </Grid>
</Window>
